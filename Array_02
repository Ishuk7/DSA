//Reverse an array using loop (single array)
#include <iostream>
using namespace std;

int main() 
{
    int n;
    cout<<"Enter the number of element in array : ";
    cin>>n;
    
    int arr[n];
    
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    
    cout<<"Reversed Array : [";
    for(int i=n-1;i>=0;i--)
    {
        cout<<" "<<arr[i];
        
        if(i==0)
        {
            continue;
        }
        else
        {
            cout<<",";
        }
    }
    cout<<"]";
    return 0;
}
